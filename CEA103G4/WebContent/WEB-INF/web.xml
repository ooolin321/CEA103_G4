<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="false" version="3.0">
	<display-name>CEA103G4</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/admin</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<servlet>
		<servlet-name>ProductServlet</servlet-name>
		<servlet-class>com.product.controller.ProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProductServlet</servlet-name>
		<url-pattern>/product/product.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Product_TypeServlet</servlet-name>
		<servlet-class>com.product_type.controller.Product_TypeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Product_TypeServlet</servlet-name>
		<url-pattern>/product_type/product_type.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Seller_FollowServlet</servlet-name>
		<servlet-class>com.seller_follow.controller.Seller_FollowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Seller_FollowServlet</servlet-name>
		<url-pattern>/seller_follow/seller_follow.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Product_ReportServlet</servlet-name>
		<servlet-class>com.product_report.controller.Product_ReportServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Product_ReportServlet</servlet-name>
		<url-pattern>/product_report/product_report.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LiveServlet</servlet-name>
		<servlet-class>com.live.controller.LiveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LiveServlet</servlet-name>
		<url-pattern>/front-end/live/live.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MsgServlet</servlet-name>
		<servlet-class>com.msg.controller.MsgServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MsgServlet</servlet-name>
		<url-pattern>/msg/msg.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Live_orderServlet</servlet-name>
		<servlet-class>com.live_order.controller.Live_orderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Live_orderServlet</servlet-name>
		<url-pattern>/front-end/live_order/live_order.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Live_reportServlet</servlet-name>
		<servlet-class>com.live_report.controller.Live_reportServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Live_reportServlet</servlet-name>
		<url-pattern>/back-end/live_report/live_report.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>DBGifReader</servlet-name>
		<servlet-class>com.live_report.controller.DBGifReader</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DBGifReader</servlet-name>
		<url-pattern>/live_report/DBGifReader.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>EmpServlet</servlet-name>
		<servlet-class>com.emp.controller.EmpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmpServlet</servlet-name>
		<url-pattern>/emp/emp.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FunServlet</servlet-name>
		<servlet-class>com.fun.controller.FunServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FunServlet</servlet-name>
		<url-pattern>/fun/fun.do</url-pattern>
	</servlet-mapping>
<servlet>
		<servlet-name>OrderServlet</servlet-name>
		<servlet-class>com.order.controller.OrderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OrderServlet</servlet-name>
		<url-pattern>/order/order.do</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>setCharacterEncoding</filter-name>
		<filter-class>filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>setCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>